SESSION_NAME="sgre-as";
tmux attach-session -t "$SESSION_NAME" || \
		  (tmux new-session -d -s "$SESSION_NAME" \
		  -n portal "cd ~/sgre-as/service-admin-portal/ && nvim --cmd :terminal" && \
		  tmux new-window -n backend "cd ~/sgre-as/api-v3/ && nvim --cmd :terminal" && \
		  tmux new-window -n sgre-portal "cd ~/sgre-as/sgre-portal/ && nvim --cmd :terminal" && \
		  tmux new-window -n sgre-as-backend-services "cd ~/sgre-as/sgre-as-backend-services/ && nvim --cmd :terminal" && \
		  tmux new-window -n sgre-checklist-backend "cd ~/sgre-as/sgre-checklist-backend/ && nvim --cmd :terminal" && \
		  tmux -2 attach-session -d)
